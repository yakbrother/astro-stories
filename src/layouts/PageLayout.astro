---
import { SITE_TITLE } from 'profile';
import BaseLayout from './BaseLayout.astro';

interface Props {
	title: string;
	subtitle?: string;
	description?: string;
	breadcrumbs?: Array<{
		text: string;
		href?: string;
	}>;
}



const { title, subtitle, description, breadcrumbs = [] } = Astro.props;
---

<BaseLayout title={title} breadcrumbs={breadcrumbs} />


<article>
		<header>
			<h2>{title}</h2>
			{subtitle && (<span>{subtitle}</span>)}
		</header>
		
		<section class="article | stack">
			<slot />
		</section>
</article>
		
	<style>
		section.stack {
			padding-top: 0;
		}
	</style>
</BaseLayout>