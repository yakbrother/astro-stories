---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from './FormattedDate.astro';
import Tag from './Tag.astro';

interface Props {
    story: CollectionEntry<'stories'>;
    featured?: boolean;
}

const { story, featured = false } = Astro.props;
const { title, description, pubDate, tags } = story.data;
---

<storycard class:list={['story-card', { featured }]}>
    <a href={`/stories/${story.id}/`} class="story-link">
        <h3>{title}</h3>
        <p>{description}</p>
    </a>
    <div class="metadata">
        <FormattedDate date={pubDate} />
        <span class="tags">
            {tags.map((tag) => (
                <Tag tag={tag} size="sm" />
            ))}
        </span>
    </div>
</storycard>

<style>
    .story-card {
        border-radius: 8px;
        background-color: var(--gray-50);
        transition: all 0.2s ease;
        border: 1px solid transparent;
    }

    .story-card:hover {
        background-color: var(--gray-100);
        transform: translateY(-2px);
        border-color: var(--gray-200);
    }

    .story-link {
        display: block;
        text-decoration: none;
        color: inherit;
    }

    .story-card h3 {
        margin: 0;
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
        color: var(--gray-900);
    }

    .story-card p {
        margin: 0;
        margin-bottom: 1rem;
        color: var(--gray-700);
        line-height: 1.5;
    }

    .metadata {
        display: flex;
        gap: 1rem;
        align-items: center;
        font-size: 0.9rem;
        color: var(--gray-600);
    }

    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
</style>
